{% extends "__layout.twig" %}

{% block content %}

    <h1>Поиск</h1>

    <form action="" class="container mt-4">
        <div class="row g-3">
            <div class="col">
                <label>Тип</label>
                <select name="type" class="form-select">
                    <option value="">Все</option>
                    <option value="Джедай">Джедай</option>
                    <option value="Ситх">Ситх</option>
                    <option value="Человек">Человек</option>
                </select>
            </div>
            
            <div class="col">
                <label>Название</label>
                <input class="form-control" type="text" name="title">
            </div>
            
            <div class="col">
                <label>Описание</label>
                <input class="form-control" type="text" name="info">
            </div>
            
            <div class="col-md-1">
                <br>
                <button type="submit" class="btn btn-primary w-100">Найти</button>
            </div>
        </div>
    </form>

    <div style="margin-top: 15px;">
        <ul class="list-group">
            {% for object in title_objects %}
                <li class="list-group-item">
                    <a href="character/{{ object.id }}">{{object.title}}</a> <br>
                </li>   
            {% endfor %}
        </ul>
    </div>

{% endblock %}